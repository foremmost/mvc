block vars
	-
		let
			page_title = '',
			fancy = '',
			slick = false,
			greensock = false;
		const
			site_name = 'MVC';
include ../../../../../core/mixins/mixins
include ../data/data
doctype html
html(lang='ru')
	head
		meta(charset='utf-8')
		meta(name="viewport" content="width=device-width,user-scalable=no, initial-scale=1.0,maximum-scale=1.0")
		meta(http-equiv="X-UA-Compatible" content="ie=edge")
		link( rel="icon" type="image/jpeg" href="img/favicon.jpg")
		title #{site_name} - #{page_title}
		- if(fancy)
			+inc('css','css/jquery.fancybox.css')
		- if(slick)
			+inc('css','css/css_js/slick.css')
		+inc('css','css/main.css')
	body
		.set
			block header
				.section
					.bricks
			block main
				block aside
				block content
			block footer.ground
				- if(fancy || slick)
					+inc('js','js/jquery-3.3.1.min.js')
				- if(fancy)
					+inc('js','js/jquery.fancybox.min.js')
				- if(slick)
						+inc('js','js/slick.js')
				- if(greensock)
						+inc('js','js/greensock.js')
				+inc('js','js/main.js',true)
				+inc('js','js/J_Cart.js',true)
			//	+inc('js','js/main.js',true)
